<div class="even">
  <h1 class="section_title">Spi Dashboard 1.0</h1>
    <div class="container">
        <h2>The Ping Pong Table Is...</h2>
        <p class="true <%= ' active' if (!!@available == @available && @available) %>">AVAILABLE</p>
        <p class="false <%= ' active' if (!!@available == @available && !@available) %>">IN-USE</p>
    </div>
</div>

<div id='banner' class='odd'>
    <div class='container'>
      <%= @message_text %>
    </div>
</div>

<div id='footer' class='even'>
    <div class='container'>
        <h2>
            Credits
        </h2>
        <div id='footer-title'>
            Created By:
        </div>
        <div id='names'>
            <span>Justin Roberts</span>
            <span>Chip Freeney</span>
            <span>David Posey</span>
        </div>

        <div id='footer-title'>
            Special Thanks:
        </div>
        <div id='names'>
            <span>Charessa Pearson</span>
            <span>Tyler Kling</span>
            <span>Christian Blades</span>
        </div>
    </div>
</div>

<script type="text/javascript">
	setTimeout('poll()', 5000);

	function poll() {
		$.getJSON('/status/available.json', function(data) {
			$('p').removeClass('active');
			$('.' + data.available).addClass('active');

			setTimeout('poll()', 5000);
		});
	}
</script>
